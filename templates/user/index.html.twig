{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="greenOnWhite">Liste des utilisateurs</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>E-mail</th>
                <th>Prénom</th>
                <th>Nom de famille</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}"><button class="btn form-button">{{ button_label|default('Voir') }}</button></a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn form-button">{{ button_label|default('Editer') }}</button></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="15">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('user_new') }}"><button class="btn form-button">{{ button_label|default('Créer') }}</button></a>
    </div>
{% endblock %}
