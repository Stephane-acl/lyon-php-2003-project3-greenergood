{% extends 'base.html.twig' %}

{% block body %}
    <div class="bloc_page">
        <img class="img-leaf-palm rotation110" src="{{ asset('img/index/index_palme_verte_bleue.png') }}"
             alt="Feuille palme verte et bleue">
        <img class="img-leaf-blue" src="{{ asset('img/index/index_feuille_bleue.png') }}" alt="Feuille palme bleue">
        <img class="img-leaf-green" src="{{ asset('img/index/index_feuille_verte.png') }}" alt="Feuille palme verte">
        <img class="img-leaf-palm-tall " src="{{ asset('img/index/index_palme_verte_bleue.png') }}"
             alt="Feuille palme verte et bleue">
        <h1>Index</h1>

        <div class="container-center index">
            <h4>Fiches actions</h4>
            <ul>
                {% for action in actions %}
                    <li>{{ action.name }} : {{ action.startDate|date('d-m-Y') }}</li>
                {% endfor %}
            </ul>
            <h4>Fiches m√©thodes</h4>
            <ul>
                {% for method in methods %}
                    <li>{{ method.name }}</li>
                {% endfor %}
            </ul>
            <h4>Fiches des membres</h4>
            <ul>
                {% for user in users %}
                    <li>{{ user.lastname }}  {{ user.firstname }}</li>

                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}