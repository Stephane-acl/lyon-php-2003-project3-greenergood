{% extends 'base.html.twig' %}

{% block body %}
    <div class="bloc_page">
        <img class="img-leaf-palm rotation110" src="{{ asset('img/index/index_palme_verte_bleue.png') }}"
             alt="Feuille palme verte et bleue">
        <img class="img-leaf-blue" src="{{ asset('img/index/index_feuille_bleue.png') }}" alt="Feuille palme bleue">
        <img class="img-leaf-green" src="{{ asset('img/index/index_feuille_verte.png') }}" alt="Feuille palme verte">
        <img class="img-leaf-palm-tall " src="{{ asset('img/index/index_palme_verte_bleue.png') }}"
             alt="Feuille palme verte et bleue">
        <h1>Index</h1>

        <div class="index-container">
            <h4><a href="{{ path('action_index') }}">Fiches actions</a></h4>
            <ul>
                {% for action in actions %}
                    <li>
                        <a href="{{ path('action_show', {'id':action.id}) }}">
                            {{ action.name }} : {{ action.startDate|date('d-m-Y') }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
            <h4><a href="{{ path('method_index') }}">Fiches m√©thodes</a></h4>
            <ul>
                {% for method in methods %}
                    <li><a href="{{ path('method_show', {'id': method.id}) }}">{{ method.name }}</a></li>
                {% endfor %}
            </ul>
            <h4><a href="{{ path('user_index') }}">Fiches des membres</a></h4>
            <ul>
                {% for user in users %}
                    <li><a href="{{ path('user_show', {'id':user.id}) }}">{{ user.lastname }}  {{ user.firstname }}</a></li>

                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}