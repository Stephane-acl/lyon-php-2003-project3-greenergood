    <script>
        jQuery(document).ready(function () {
            var $wrapper = $('.js-methodLink-wrapper');
            $wrapper.on('click', '.js-remove-methodLink', function (e) {
                e.preventDefault();

                $(this).closest('.js-methodLink-item')
                    .fadeOut()
                    .remove();
            });

        });
    </script>
