<form method="post" action="{{ path('action_delete', {'id': action.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir désactiver cette fiche ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ action.id) }}">
    <button class="btn form-button">Désactiver</button>
</form>
