{% extends 'base.html.twig' %}

{% block title %}Action{% endblock %}

{% block body %}
    <h1>Action</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ action.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ action.name }}</td>
            </tr>
            <tr>
                <th>EditionNumber</th>
                <td>{{ action.editionNumber }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ action.number }}</td>
            </tr>
            <tr>
                <th>ActionPicture</th>
                <td>{{ action.actionPicture }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ action.description }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ action.startDate ? action.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ action.endDate ? action.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ action.location }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ action.content }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ action.status }}</td>
            </tr>
            <tr>
                <th>ProjectProgress</th>
                <td>{{ action.projectProgress }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('action_index') }}">back to list</a>

    <a href="{{ path('action_edit', {'id': action.id}) }}">edit</a>

    {{ include('action/_delete_form.html.twig') }}
{% endblock %}
