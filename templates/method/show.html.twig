{% extends 'base.html.twig' %}

{% block title %}
    Fiche Méthode - {{ method.name }}

    {% if method.activated == false %}
        - Désactivée
    {% endif %}

{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="horizontal">
            <div {% if method.activated == false %} class="deactivated" {% endif %}>
                Fiche METHODE n°{{ method.id }}

                {% if method.activated == false %}
                    - Désactivée
                {% endif %}

            </div>

            <!-- Menu three dots -->
            <div class="action-mini-menu">
                <div class="action-three-dots threeDots"></div>
                <div class="action-menu menu">
                    <a href="{{ path('method_edit', {'id': method.id}) }}">Modifier</a>
                    <a href="{{ path('method_deactivate', {'id': method.id}) }}">Dupliquer</a>

                    {% if is_granted('ROLE_ADMIN') %}

                        {% if method.activated == true %}
                            <a>{{ include('method/_delete_form.html.twig') }}</a>
                        {% elseif method.activated == false %}
                            <a href="{{ path('method_activate', {'id': method.id}) }}">Activer</a>
                        {% endif %}

                    {% endif %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-xl-11 method-header">
                <div class="method-title col-6">
                    <div>
                        <figure class="col-12 method-cat-img">
                            <img class="method-arrow" src="{{ asset('../img/method/fiche_methode_catégorie.png') }}"
                                 alt="Fond vert du titre">
                            <figcaption>
                                Catégorie de la méthode
                            </figcaption>
                        </figure>
                    </div>
                    <div class="method-name">
                        <h1>{{ method.name }}</h1>
                    </div>
                </div>
                <img class="method-image" src="{{ asset('../img/action/image_placeholder.jpg') }}">
            </div>
        </div>
        <div class="row">
            <div class="method-infos col-12 col-xl-11 justify-content-between">
                <div class="method-bloc-infos col-12 col-xl-5 offset-xl-1">
                    <span>Fiche rédigée par :</span>
                    <span>Le : dd/mm/YY</span>
                    <span>Fiche validée par : </span>
                </div>
                <div class="method-bloc-infos col-12">
                    <span>Objectif 1 :</span>
                    <span>Objectif 2 :</span>
                    <span>Objectif 3 :</span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
