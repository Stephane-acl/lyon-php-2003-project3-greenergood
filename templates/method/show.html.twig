{% extends 'base.html.twig' %}

{% block title %}Method{% endblock %}

{% block body %}
    <h1>Method</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ method.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ method.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ method.createdAt ? method.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prerequisites</th>
                <td>{{ method.prerequisites }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ method.content }}</td>
            </tr>
            <tr>
                <th>Objectives</th>
                <td>{{ method.objectives }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('method_index') }}">back to list</a>

    <a href="{{ path('method_edit', {'id': method.id}) }}">edit</a>

    {{ include('method/_delete_form.html.twig') }}
{% endblock %}
