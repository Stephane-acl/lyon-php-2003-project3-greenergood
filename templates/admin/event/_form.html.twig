{{ form_start(form) }}
<div class="event-form-label">{{ form_errors(form) }}</div>
<div class="event-form-label">{{ form_row(form.name) }}</div>
<div class="event-form-label">{{ form_row(form.startDate) }}</div>
<div class="event-form-label">{{ form_row(form.endDate) }}</div>
<div class="event-form-label">{{ form_row(form.description) }}</div>
<div class="event-form-label">{{ form_row(form.target) }}</div>

<div class="d-flex justify-content-center">
    <button class="btn">{{ button_label|default('Ajouter') }}</button>
</div>
{{ form_end(form) }}
