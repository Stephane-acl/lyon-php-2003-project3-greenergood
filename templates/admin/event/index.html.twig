{% extends 'base.html.twig' %}

{% block title %}Historique de The Greener Good{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="greenOnWhite">Liste des évènements</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Description</th>
            <th>Interne/Externe</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.startDate ? event.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.endDate ? event.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.target }}</td>
                <td>
                    {{ include('admin/event/_delete_form.html.twig') }}
                    <a href="{{ path('admin_event_edit', {'id': event.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun évènement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
